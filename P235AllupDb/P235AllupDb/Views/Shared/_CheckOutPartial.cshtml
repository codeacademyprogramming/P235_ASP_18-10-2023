@model Order

<form id="checkoutform" method="post">
    <div class="billing-address mt-30">
        <h4 class="allup-title">Billing Address</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="single-form">
                    <label>First Name*</label>
                    <input asp-for="Name" placeholder="First Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-form">
                    <label>Last  Name*</label>
                    <input asp-for="SurName" placeholder="Last Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-form">
                    <label>Email Address*</label>
                    <input asp-for="Email" placeholder="Email Address">
                </div>
            </div>
            <div class="col-md-12">
                <div class="single-form">
                    <label>Address</label>
                    <input asp-for="Line1" placeholder="Address Line 1">
                    <input asp-for="Line2" placeholder="Address Line 2">
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-form">
                    <label>Country*</label>
                    <input asp-for="Country" placeholder="Country">
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-form">
                    <label>Town/City*</label>
                    <input asp-for="Town" placeholder="Town/City">
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-form">
                    <label>State*</label>
                    <input asp-for="State" placeholder="State">
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-form">
                    <label>Zip Code*</label>
                    <input asp-for="PostalCode" placeholder="Zip Code">
                </div>
            </div>
        </div>
    </div>
</form>