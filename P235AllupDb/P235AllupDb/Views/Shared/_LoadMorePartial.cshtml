@model IEnumerable<Product>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="grid" role="tabpanel" aria-labelledby="grid-tab">
        <div class="row">
            @foreach (Product product in Model)
            {
                <div class="product-col col-md-4 col-sm-6">
                    <div class="single-product mt-30">
                        <div class="product-image">
                            <a href="single-product.html">
                                <img class="first-image" src="~/assets/images/product/@product.MainImage" alt="product">
                                <img class="second-image" src="~/assets/images/product/@product.HoverImage" alt="product">
                            </a>
                            <ul class="product-meta">
                                <li><a class="addBasket" asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id"><i class="icon ion-bag"></i></a></li>
                                <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                                <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                                <li><a class="modalBtn" data-toggle="modal" data-target="#productQuickModal" asp-controller="Product" asp-action="Modal" asp-route-id="@product.Id"><i class="icon ion-android-open"></i></a></li>
                            </ul>
                            @if (product.DiscountedPrice != null && product.DiscountedPrice > 0)
                            {
                                <span class="discount-product">-@((((product.Price - product.DiscountedPrice) / product.Price) * 100).ToString("#.##"))%</span>
                            }
                        </div>
                        <div class="product-content">
                            <h4 class="product-title"><a href="single-product.html">@product.Title</a></h4>
                            <ul class="product-rating">
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                                <li class="rating-on"><i class="fas fa-star"></i></li>
                            </ul>
                            <div class="product-price">
                                @if (product.DiscountedPrice != null && product.DiscountedPrice > 0)
                                {
                                    <span class="regular-price ">€@product.Price</span>
                                    <span class="price-sale">€@product.DiscountedPrice</span>
                                }
                                else
                                {
                                    <span class="price-sale">€@product.Price</span>
                                }
                            </div>
                        </div>
                    </div> <!-- single product -->
                </div>
            }
        </div> <!-- row -->
    </div>
</div> <!-- Tab Content -->
