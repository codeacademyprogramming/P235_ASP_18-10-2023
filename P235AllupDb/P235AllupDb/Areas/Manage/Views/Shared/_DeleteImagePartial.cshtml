@model IEnumerable<ProductImage>

@foreach (ProductImage productImage in Model)
{
    <div>
        <img style="width:100px;" src="~/assets/images/product/@productImage.Image" />
        @if (Model.Count() > 1)
        {
            <a class="deleteimagebtn" asp-area="manage" asp-action="deleteimage" asp-controller="product" asp-route-imageId="@productImage.Id" asp-route-id="@productImage.ProductId">
                <i class="fa fa-times" aria-hidden="true"></i>
            </a>
        }
    </div>
}