@model OrderVM
<form method="post" asp-area="manage" asp-controller="order" asp-action="Update">
    <input asp-for="Id" type="hidden" />
    <input asp-for="UserId" type="hidden" />
    <div class="form-group">
        <label asp-for="Comment"></label>
        <input asp-for="Comment" class="form-control" placeholder="Name">
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<OrderStatus>()">
            @* @foreach (var item in Enum.GetValues(typeof(OrderStatus)))
            {
            <option value="@((int)item)">@item</option>
            } *@
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section Scripts{
    @await Html.PartialAsync("_Validation")
}